<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buyer Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
<header>
  <div class="container header-container">
    <div class="logo">FarmConnect</div>
    <nav>
      <a href="/">Home</a>
      <a href="/logout">Logout</a>
    </nav>
  </div>
</header>

<main class="container dashboard">
  <h1>Welcome, <%= session.user.name %></h1>

  <section class="cards-container">
    <!-- Add Request -->
    <div class="card">
      <h3><i class="fas fa-plus-circle"></i> Post a Request</h3>
      <form action="/buyer/add-request" method="POST">
        <input type="text" name="crop_name" placeholder="Crop Name" required>
        <input type="text" name="quantity" placeholder="Quantity (e.g., 50 kg)" required>
        <input type="text" name="price" placeholder="Expected Price (e.g., â‚¹25 per kg)" required>
        <button class="btn" type="submit"><i class="fas fa-plus"></i> Post</button>
      </form>
    </div>

    <!-- Farmer Products -->
    <div class="card">
      <h3><i class="fas fa-warehouse"></i> Farmer Products</h3>
      <table>
        <thead>
          <tr>
            <th>Farmer</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Harvest Date</th>
          </tr>
        </thead>
        <tbody>
          <% (farmerProducts || []).forEach(prod => { %>
            <tr>
              <td><%= prod.farmer_name %></td>
              <td><%= prod.product_name %></td>
              <td><%= prod.quantity %></td>
              <td><%= prod.price %></td>
              <td><%= prod.harvest_date %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- My Requests -->
    <div class="card">
      <h3><i class="fas fa-list"></i> My Requests</h3>
      <table>
        <thead>
          <tr>
            <th>Crop</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% (myRequests || []).forEach(req => { %>
            <tr>
              <td><%= req.crop_name %></td>
              <td><%= req.quantity %></td>
              <td><%= req.price %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
</main>
</body>
</html>
